}

// Set all LEDs to a given color and apply it (visible)
void setAll(uint8_t red, uint8_t green, uint8_t blue) {
  for(int i = 0; i < PixelCount; i++ ) {
    setPixel(i, red, green, blue); 
  }
  showStrip();
}




